	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "philo",
			"command": "make",
			"args": [ "re"
			],
			"options": {
				"cwd": "${workspaceFolder}/philo"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}